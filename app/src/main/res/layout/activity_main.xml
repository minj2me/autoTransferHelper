<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/btnOpenService"
      android:textSize="18sp"
      android:textColor="#000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1. 打开助手服务"/>
  <Button
      android:id="@+id/btnOpenNotification"
      android:layout_marginTop="5dip"
      android:textSize="18sp"
      android:textColor="#000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2. 开启提醒权限"/>

  <Button
      android:visibility="gone"
      android:id="@+id/btnPrint"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="3. 打印数据 "/>

  <Button
      android:id="@+id/btnTest"
      android:visibility="visible"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="测试支付宝收到钱 "/>

  <Button
      android:visibility="gone"
      android:id="@+id/btnTestWechat"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="测试微信收到钱 "/>

  <TextView
      android:layout_marginTop="20dip"
      android:gravity="center_vertical"
      android:textSize="18sp"
      android:textColor="#000000"
      android:text="3. 用于支付的支付宝设置"
      android:layout_width="match_parent"
      android:layout_height="50dip"/>

  <EditText
      android:id="@+id/etTransferOutAlipayAccount"
      android:hint="支付宝账号"
      android:textSize="17sp"
      android:imeOptions="actionNext"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <TextView
      android:layout_marginTop="10dip"
      android:gravity="center_vertical"
      android:textSize="18sp"
      android:textColor="#000000"
      android:text="4. 用于支付的微信设置"
      android:layout_width="match_parent"
      android:layout_height="50dip"/>

  <EditText
      android:id="@+id/etTransferOutWechatAccount"
      android:hint="微信账号"
      android:imeOptions="actionNext"
      android:textSize="17sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <EditText
      android:id="@+id/etTransferOutWechatPayPassword"
      android:hint="微信支付密码"
      android:layout_marginTop="10dip"
      android:imeOptions="actionDone"
      android:textSize="17sp"
      android:inputType="textPassword"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <Button
      android:id="@+id/btnOk"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorPrimaryDark"
      android:textSize="18sp"
      android:textColor="#ffffff"
      android:layout_marginTop="30dip"
      android:text="完 成"/>

  <!--<Button-->
      <!--android:id="@+id/btnRequest"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:text="request Network"/>-->
  <TextView
      tools:visibility="visible"
      android:id="@+id/tvNote"
      android:layout_marginTop="20dip"
      android:gravity="center_vertical"
      android:textSize="28sp"
      android:textColor="@color/colorAccent"
      tools:text="注意:"
      android:layout_width="match_parent"
      android:layout_height="50dip"/>
</LinearLayout>